// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// For LOCAL development: use SQLite
// For PRODUCTION (Vercel): change to postgresql and update DATABASE_URL
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // Hashed password for credentials login
  emailVerified DateTime? // For future OAuth/email verification
  role          UserRole  @default(VOLUNTEER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
}

enum UserRole {
  ADMIN
  VOLUNTEER
}

model Borrower {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  address   String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  loans     Loan[]
}

model Loan {
  id           String     @id @default(cuid())
  borrowerId   String
  borrower     Borrower   @relation(fields: [borrowerId], references: [id], onDelete: Cascade)
  amount       Float
  interestRate Float?     @default(0)
  issuedAt     DateTime
  dueDate      DateTime
  status       LoanStatus @default(ACTIVE)
  notes        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  payments     Payment[]
}

enum LoanStatus {
  ACTIVE
  PAID
  OVERDUE
  DEFAULTED
}

model Payment {
  id        String   @id @default(cuid())
  loanId    String
  loan      Loan     @relation(fields: [loanId], references: [id], onDelete: Cascade)
  amount    Float
  paidAt    DateTime @default(now())
  notes     String?
  method    String?  @default("cash")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String?
  action    String
  payload   String?  // JSON string
  createdAt DateTime @default(now())
}

model LoanApplication {
  id                    String                @id @default(cuid())
  fullName              String
  email                 String
  phone                 String
  address               String
  employmentStatus      String
  monthlyIncome         Float
  loanAmount            Float
  loanPurpose           String
  documents             String?               // JSON array of document names
  status                LoanApplicationStatus @default(SUBMITTED)
  reviewedBy            String?
  reviewedAt            DateTime?
  reviewNotes           String?
  conditionalApprovalNotes String?
  requiredDocuments     String?               // JSON array of required documents for conditional approval
  signedDocuments       String?               // JSON array of signed document names
  documentsSignedAt     DateTime?
  finalApprovedBy       String?
  finalApprovedAt       DateTime?
  disbursedBy           String?
  disbursedAt           DateTime?
  disbursementAmount    Float?
  disbursementMethod    String?
  disbursementReference String?
  loanId                String?               // Reference to created loan after final approval
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
}

enum LoanApplicationStatus {
  SUBMITTED
  UNDER_REVIEW
  CONDITIONALLY_APPROVED
  DOCUMENTS_SIGNED
  APPROVED
  DISBURSED
  REJECTED
}

// Password Reset Token for forgot password flow
model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
}

// OAuth Account model for Google/other providers
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// Session model (optional, for database sessions)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}